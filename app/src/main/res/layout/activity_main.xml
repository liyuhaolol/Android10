<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll"
    android:visibility="gone">
    <View
        android:id="@+id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="约束布局至少需要横竖两个方向的约束"
                    android:textSize="25sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <TextView
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:text="第一行对齐文字baseline"
                    android:textSize="20sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/tv1"
                    app:layout_constraintLeft_toRightOf="@+id/tv1"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#68b0f9">
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="约束强度0.1为屏幕剩余空间10%，1为剩余空间100%，一般不用大于1的强度"/>
                <View
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#f5ec7e"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_bias="0.9"
                    app:layout_constraintVertical_bias="0.2"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textSize="10sp"
                    android:text="红色框对Gone的View的位置有变化"/>
                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="#f5ec7e"
                    android:gravity="center"
                    android:text="Hello World!"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_bias="0.3"
                    app:layout_constraintVertical_bias="0.7"/>

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="#fa6e61"
                    android:gravity="center"
                    android:text="Hello World!"
                    app:layout_constraintBottom_toBottomOf="@+id/tv2"
                    app:layout_constraintRight_toLeftOf="@+id/tv2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="#f5ec7e"
                    android:gravity="center"
                    android:text="Hello World!"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_bias="0.7"
                    app:layout_constraintVertical_bias="0.7"/>

                <TextView
                    android:id="@+id/tv5"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="#fa6e61"
                    android:gravity="center"
                    android:text="Hello World!"
                    app:layout_constraintBottom_toBottomOf="@+id/tv4"
                    app:layout_constraintLeft_toRightOf="@+id/tv4"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#68b0f9">
                <TextView
                    android:id="@+id/title11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View按照比例来显示"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <TextView
                    android:id="@+id/v1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:text="16:9"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/title11"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:background="#f5ec7e"
                    app:layout_constraintDimensionRatio="h,16:9"/>
                <TextView
                    android:layout_width="240dp"
                    android:layout_height="0dp"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:text="4:3"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/v1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.3"
                    android:background="#fa6e61"
                    app:layout_constraintDimensionRatio="h,4:3"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/title123"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="20dp"
                    android:text="跟线性布局一样可以设置weight,包括chain"/>

                <TextView
                    android:id="@+id/tv6"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:background="#f5ec7e"
                    android:gravity="center"
                    android:text="weight:1.5"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintHorizontal_weight="1.5"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/tv7"
                    app:layout_constraintTop_toBottomOf="@id/title123"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:id="@+id/tv7"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:background="#55e4f4"
                    android:gravity="center"
                    android:text="weight:1"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintLeft_toRightOf="@+id/tv6"
                    app:layout_constraintRight_toLeftOf="@+id/tv8"
                    app:layout_constraintTop_toBottomOf="@id/title123"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:id="@+id/tv8"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:background="#f186ad"
                    android:gravity="center"
                    android:text="weight:1"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintLeft_toRightOf="@+id/tv7"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title123"
                    android:layout_marginTop="20dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>